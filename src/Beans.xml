<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean
		id="helloWorld"
		class="pack.HelloWorld" scope="singleton">
		<property
			name="message"
			value="Hello World!" />
	</bean>
	<bean
		id="helloWorld2"
		class="pack.HelloWorld">
		<property
			name="message"
			value="Hello World2!" />
	</bean>
	<bean
		id="helloWorld3"
		class="pack.HelloWorld"
		name="message"
		lazy-init="true">
		<property
			name="message"
			value="Hello World3!" />
	</bean>
</beans>